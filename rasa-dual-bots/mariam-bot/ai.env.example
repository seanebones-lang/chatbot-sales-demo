# AI Integration Configuration for Mariam Bot
# Copy this file to .env and fill in your OpenAI API key

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Confidence Thresholds (0.0 to 1.0)
# High confidence: Use knowledge bot only
# Medium confidence: Use hybrid mode (knowledge + AI enhancement)
# Low confidence: Use AI fallback
CONFIDENCE_HIGH_THRESHOLD=0.8
CONFIDENCE_MEDIUM_THRESHOLD=0.6
CONFIDENCE_LOW_THRESHOLD=0.4

# Logging Configuration
LOG_LEVEL=INFO
LOG_AI_INTERACTIONS=true
LOG_CONFIDENCE_SCORES=true

# Context Management
MAX_CONVERSATION_HISTORY=10
MAX_CONTEXT_AGE_HOURS=24

# Rate Limiting (optional)
MAX_AI_REQUESTS_PER_MINUTE=60
MAX_AI_REQUESTS_PER_HOUR=1000
