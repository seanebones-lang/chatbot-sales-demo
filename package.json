{
  "name": "islamic-study-guide",
  "version": "1.0.0",
  "description": "Complete Islamic Study Guide - Comprehensive Quran, Hadith, Fiqh, and Islamic Knowledge Application",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build-app": "electron-builder",
    "package": "electron-builder --dir",
    "dist": "electron-builder",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "dependencies": {
    "autoprefixer": "^10.4.14",
    "lucide-react": "^0.263.1",
    "postcss": "^8.4.24",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.islamicstudyguide.app",
    "productName": "Islamic Study Guide",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/**/*",
      "*.html",
      "*.py",
      "*.sh",
      "*.conf",
      "*.service",
      "*.db",
      "*.json"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "public/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "islamic",
    "quran",
    "hadith",
    "fiqh",
    "islam",
    "study",
    "guide",
    "knowledge",
    "education",
    "app",
    "desktop",
    "application"
  ],
  "author": "Islamic Study Guide Team",
  "license": "MIT"
}
